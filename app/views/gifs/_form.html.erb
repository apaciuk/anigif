<%= form_with(model: gif) do |form| %>
  <% if gif.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gif.errors.count, "error") %> prohibited this gif from being saved:</h2>

      <ul>
      <% gif.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :user_id, class: 'form-label' %>
      <%= form.text_field :user_id, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :image_data, class: 'form-label' %>
      <%= form.text_area :image_data, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if gif.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', gif, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if gif.persisted? %>
      <%= link_to "Cancel", gif, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", gifs_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
